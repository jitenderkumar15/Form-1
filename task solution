<body>
    <header>
        <h1>JS For Beginners</h1>
      </header>
  
      <section class="container">
        <form onsubmit='saveToLocal(event)' id="my-form">
          <h1>Add User</h1>
          <div class="msg"></div>
          <div>
            <label for="name">Name:</label>
            <input type="text" id="name">
          </div>
          <div>
            <label for="email">Email:</label>
            <input type="text" id="email">
          </div>
          <div>
            <label for="phone">Phone Number</label>
            <input type="text" id="phone">
          </div>
          <input class="btn" type="submit" value="Submit"><br>
          
        </form>

        <ul id="listItem"> </ul>

        
      </section>

      <script>
        function saveToLocal(event){
          event.preventDefault();

          const name1=event.target.name.value;
          const email1=event.target.email.value;
          const phone=event.target.phone.value;

          // localStorage.setItem("Name",name1);
          // localStorage.setItem("Email ID",email1);
          // localStorage.setItem("Phone Number",phone);
          
          let myobj = {
            name: name1,
            Email:email1,
            Phone:phone
          };

          let myobj_serialized=JSON.stringify(myobj);
          
        
          localStorage.setItem(name1,myobj_serialized);

          const parentElem=document.getElementById('listItem');
          const childElem=document.createElement('li');

          childElem.textContent=myobj.name + ' | ' + myobj.Email + ' | ' + myobj.Phone;
          parentElem.appendChild(childElem);
        }
      </script>
</body>
